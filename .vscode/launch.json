        {
            "name": "(Windows) Launch (build first)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/sox",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
