{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Sox",
            "type": "shell",
            "problemMatcher": [],
            "command": "make build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Clean All",
            "type": "shell",
            "problemMatcher": [],
            "command": "make clean",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Rebuild All",
            "type": "shell",
            "problemMatcher": [],
            "command": "make build",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Clean All"
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "problemMatcher": [],
            "command": "make build-test",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Build sox - clang",
            "command": "/usr/bin/clang",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}