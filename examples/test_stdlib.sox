// ===================
// Math Tests
// ===================
print("--- Math Tests ---")

check(math.abs(-5) == 5, "abs() returns absolute value")
check(math.abs(5) == 5, "abs() keeps positive numbers positive")
check(math.square(4) == 16, "square() computes square")
check(math.cube(3) == 27, "cube() computes cube")
check(math.max(10, 20) == 20, "max() returns larger value")
check(math.min(10, 20) == 10, "min() returns smaller value")
check(math.sqrt(16) == 4, "sqrt() computes square root")
check(math.pow(2, 3) == 8, "pow() computes exponentiation")
check(math.floor(3.7) == 3, "floor() rounds down")
check(math.ceil(3.2) == 4, "ceil() rounds up")
check(math.round(3.5) == 4, "round() rounds to nearest")
check(math.clamp(15, 0, 10) == 10, "clamp() limits to max")
check(math.clamp(-5, 0, 10) == 0, "clamp() limits to min")
check(math.clamp(5, 0, 10) == 5, "clamp() keeps value in range")
check(math.sign(5) == 1, "sign() returns 1 for positive")
check(math.sign(-5) == -1, "sign() returns -1 for negative")
check(math.sign(0) == 0, "sign() returns 0 for zero")
check(math.isEven(4), "isEven() identifies even numbers")
check(!math.isEven(5), "isEven() rejects odd numbers")
check(math.isOdd(5), "isOdd() identifies odd numbers")
check(!math.isOdd(4), "isOdd() rejects even numbers")

var rand = math.random()
check(rand >= 0 and rand <= 1, "random() returns value between 0 and 1")

var randInt = math.randomInt(1, 10)
check(randInt >= 1 and randInt <= 10, "randomInt() returns value in range")

// Test trig functions (just check they work, not precise values)
var sinVal = math.sin(math.pi / 2)
check(sinVal > 0.99 and sinVal < 1.01, "sin(Ï€/2) â‰ˆ 1")

print("")

// ===================
// Array Tests
// ===================
print("--- Array Tests ---")

var arr = [1, 2, 3, 4, 5]

// Test map
var doubled = array.map(arr, fn(x) { return x * 2 })
check(len(doubled) == 5, "map() preserves length")
check(doubled[0] == 2, "map() transforms first element")
check(doubled[4] == 10, "map() transforms last element")

// Test filter
var evens = array.filter(arr, fn(x) { return math.isEven(x) })
check(len(evens) == 2, "filter() returns 2 even numbers")
check(evens[0] == 2, "filter() includes 2")
check(evens[1] == 4, "filter() includes 4")

// Test reduce
var sum = array.reduce(arr, fn(acc, x) { return acc + x }, 0)
check(sum == 15, "reduce() computes sum correctly")

// Test slice
var sliced = array.slice(arr, 1, 4)
check(len(sliced) == 3, "slice() returns correct length")
check(sliced[0] == 2, "slice() starts at correct index")
check(sliced[2] == 4, "slice() ends at correct index")

// Test reverse
var reversed = array.reverse(arr)
check(len(reversed) == 5, "reverse() preserves length")
check(reversed[0] == 5, "reverse() flips first element")
check(reversed[4] == 1, "reverse() flips last element")

// Test indexOf
check(array.indexOf(arr, 3) == 2, "indexOf() finds element position")
check(array.indexOf(arr, 99) == -1, "indexOf() returns -1 when not found")

// Test contains
check(array.contains(arr, 3), "contains() finds existing element")
check(!array.contains(arr, 99), "contains() rejects missing element")

// Test find
var found = array.find(arr, fn(x) { return x > 3 })
check(found == 4, "find() returns first matching element")

// Test every
check(array.every(arr, fn(x) { return x > 0 }), "every() returns true when all match")
check(!array.every(arr, fn(x) { return x > 3 }), "every() returns false when not all match")

// Test some
check(array.some(arr, fn(x) { return x > 3 }), "some() returns true when any match")
check(!array.some(arr, fn(x) { return x > 10 }), "some() returns false when none match")

// Test concat
var arr2 = [6, 7]
var concatenated = array.concat(arr, arr2)
check(len(concatenated) == 7, "concat() combines arrays")
check(concatenated[5] == 6, "concat() includes second array")

// Test first and last
check(array.first(arr) == 1, "first() returns first element")
check(array.last(arr) == 5, "last() returns last element")

// Test take and drop
var taken = array.take(arr, 3)
check(len(taken) == 3, "take() returns first N elements")
check(taken[2] == 3, "take() includes correct elements")

var dropped = array.drop(arr, 2)
check(len(dropped) == 3, "drop() removes first N elements")
check(dropped[0] == 3, "drop() starts at correct position")

// Test join with strings
var strArr = ["hello", "world", "sox"]
var joined = array.join(strArr, " ")
check(joined == "hello world sox", "join() combines strings with separator")

print("")

