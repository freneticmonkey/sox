// ===================
// String Utils Tests
// ===================
print("--- String Utils Tests ---")

check(string_utils.upper("hello") == "HELLO", "upper() converts to uppercase")
check(string_utils.lower("WORLD") == "world", "lower() converts to lowercase")
check(string_utils.trim("  spaced  ") == "spaced", "trim() removes whitespace")
check(string_utils.indexOf("hello world", "world") == 6, "indexOf() finds substring position")
check(string_utils.indexOf("hello", "xyz") == -1, "indexOf() returns -1 when not found")
check(string_utils.substring("hello", 1, 4) == "ell", "substring() extracts substring")
check(string_utils.replace("hello world", "world", "sox") == "hello sox", "replace() replaces substring")
check(string_utils.startsWith("hello", "hel"), "startsWith() checks prefix")
check(!string_utils.startsWith("hello", "wor"), "startsWith() rejects wrong prefix")
check(string_utils.endsWith("hello", "llo"), "endsWith() checks suffix")
check(!string_utils.endsWith("hello", "abc"), "endsWith() rejects wrong suffix")
check(string_utils.contains("hello world", "wor"), "contains() finds substring")
